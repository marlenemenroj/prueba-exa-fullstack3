<div class="container">
   <h1>To Do App</h1>
   <h2>Enter your tasks here</h2>
   <form method="POST" action="/" >
      <input type="text" name="task" id="task" required>
      <button type="submit" id="submit">Add Task</button>
   </form>
   <div id="tasks_container">
      <ol>
         {{#each items}}
         {{#if (isCompleted status)}}
          <li class"completed">{{task}}</li>
         <a href="/ongoing/{{task_id}}">Mark it as ongoing</a><a href="/{{task_id}}"><span> </span><i class="fa fa-trash"></i></a>
         {{else}}
         
         <li class="ongoing">{{task}}</li>
         <a href="/completed/{{task_id}}">Mark it as complete</a><a href="/{{task_id}}"><span> </span><i class="fa fa-trash"></i></a>
        
         {{/if}}
         {{/each}}
      </ol>
   </div>
</div>